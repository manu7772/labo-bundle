<!DOCTYPE html>
<html>
	<head>
		<meta charset="{{ app.service.getStringEncoder() }}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% block title %}Aequation Labo BUNDLE{% endblock %}</title>
		<link rel="icon" href="{% block favicon %}{{ asset(app.service.param('favicon.admin', 'favicon.svg')) }}{% endblock %}">
		{% block javascripts %}
		{% block importmap %}{{ importmap('labo') }}{% endblock %}
		{% endblock %}
	</head>
	<body class="labocss dark">
		<header class="container-fluid">
		{% block navbar %}
			{% include "@AequationLabo/bases/_navbar.html.twig" with {menu: menu|default(app.service.menu)} %}
		{% endblock %}
		</header>
		<main class="container-fluid">
			{% block body %}
				{% block outer_title_h1 %}
				<h1>{% block title_h1 %}Entities CRUDS{% endblock %}</h1>
				{% endblock %}
				{% block page_content %}
				<div class="columns-container">
					<div class="left-col">
						{% block sub_menu %}
						{% if submenu|default(app.service.entitymenu) %}
						{% include "@AequationLabo/bases/_submenu.html.twig" with {submenu: submenu|default(app.service.entitymenu)} %}
						{% endif %}
						{% endblock %}
					</div>
					<div class="right-col">
						{% block right_content %}
						{% endblock %}
					</div>
				</div>
				{% endblock %}
			{% endblock %}
		</main>
		<footer class="container-fluid">
			{% block footer %}
			{% endblock %}
		</footer>
		{% block after_container %}
			{# commands, modals, etc. content here #}
            {% include '@AequationLabo/partials/_commands.html.twig' %}
            {% include '@AequationLabo/partials/_flashes.html.twig' %}
		{% endblock %}
	</body>
</html>
